{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Villes{% endblock %}

{% block body %}
    <table>
        <thead>
        <tr>
            <th colspan="2">Liste des viles</th>
            <th colspan="1"><a href="{{ path('ville_create') }}" title="CrÃ©er une ville">Nouvelle ville</a></th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th>Ville</th>
            <th>Code Postal</th>
            <th>Actions</th>
        </tr>
        {% for ville in villes %}

            <tr>
                <td><a href="{{ path('ville_view', {'id': ville.id}) }}">{{ ville.nom }}</a></td>
                <td>{{ ville.codePostal }}</td>
                <td><a href="{{ path('ville_view', {'id': ville.id}) }}">Modifier</a> | <a href="{{ path('ville_view', {'id': ville.id}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="2">Date du jour : {{ "now" | date ("d/m/Y") }}</td>
            <td colspan="1">Total villes : {{ villes|length }}</td>
        </tr>
        </tfoot>
    </table>

{% endblock %}
