{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | {{ ville.nom }}
{% endblock %}

{% block body %}
    {% include 'inc/navadmin.html.twig' %}
    <div class="container">
        {% set urlCarte = "https://www.google.com/maps/place/" %}
        <h2>{{ ville.nom }}</h2>
        <h3><a href="{{ urlCarte }}{{ ville.codePostal }}" target="_blank">Localisation</a> | <a href="{{ path('ville_edit', {'id': ville.id}) }}">[ Modifier ]</a></h3>

        <iframe
                width="600"
                height="450"
                style="border:0"
                loading="lazy"
                allowfullscreen
                referrerpolicy="no-referrer-when-downgrade"
                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBEwgC7YNEgeuTKuxzqTs4BxeiZXz4Vgc8&q={{ ville.codePostal }}">
        </iframe>

    </div>
{% endblock %}