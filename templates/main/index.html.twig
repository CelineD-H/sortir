    <p>{{ app.user.pseudo }}</p>

    <table>
        <thead>
            <tr>
                <th colspan="8">Liste des sorties</th>
            </tr>
        </thead>
            <tbody>
                <tr>
                    <th>Nom de la sortie</th>
                    <th>Date de la sortie</th>
                    <th>Cl√¥ture</th>
                    <th>Inscrits/Places</th>
                    <th>Etat</th>
                    <th>Inscrit</th>
                    <th>Organisateur</th>
                    <th>Actions</th>
                </tr>
                {% for sortie in sorties %}
