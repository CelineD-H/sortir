{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Administration
{% endblock %}

{% block body %}
    {% include 'inc/navadmin.html.twig' %}
    <div class="container">
        <table>
            <thead>
            <tr>
                <th colspan="2">Liste des lieux</th>
                <th colspan="1"><a href="{{ path('lieu_create') }}" title="CrÃ©er un lieu">Nouveau lieu</a></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th>Nom</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
            {% for lieu in lieux %}

                <tr>
                    <td><a href="{{ path('lieu_view', {'id': lieu.id}) }}">{{ lieu.nom }}</a></td>
                    <td><a href="{{ path('ville_view', {'id': lieu.ville.id}) }}">{{ lieu.ville.nom }}</a></td>
                    <td><a href="{{ path('lieu_edit', {'id': lieu.id}) }}">Modifier</a></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="2">Date du jour : {{ "now" | date ("d/m/Y") }}</td>
                <td colspan="1">Total lieux : {{ lieux|length }}</td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
