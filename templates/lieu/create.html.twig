{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Création d'un lieu
{% endblock %}

{% block body %}

    <h2>Création d'un lieu</h2>
    <div class="container">
        {{ form_start(lieuForm) }}
        {{ form_widget(lieuForm) }}
        <button type="submit">Envoyer</button>
        {{ form_end(lieuForm) }}

        {% if "/sortie/create" in referer %}
            <button onclick="history.back()">Retour</button>
        {% endif %}
    </div>
{% endblock %}
