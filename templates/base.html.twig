<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=yes, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

    <link rel="icon" href="{{ asset('img/icon.png') }}">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bruno+Ace&display=swap" rel="stylesheet">

    <title>{% block title %} AdopteUnDev.com {% endblock %}</title>
</head>
<body>
    <div class="container">
        <header>
            <div class="col col-lg-8 mx-auto d-flex">
                <a href="{{ path('sortie_home') }}"><img src="{{ asset('img/logo.png') }}" alt="Logo du site" width="150"></a>

                <div class="overflow-auto">
                    <h1>AdopteUnDev.com</h1>
                    <h2>Numéro 1 des sites de rencontre à l'ENI</h2>
                </div>

                {% if app.user %}
                    <a class="avatarBox d-none d-lg-block" href="{{ path('user_view', { 'id': app.user.id }) }}"><img src="{{ asset("uploads/files/" ~ app.user.avatar) }}" alt="Avatar de {{ app.user.lastName }}" class="avatar">{{ app.user.pseudo }}</a>
                {% endif %}
            </div>

            {% include 'inc/nav.html.twig' %}
        </header>


        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}">
                    {{ message }}
                </div>

                <script src="{{ asset('js/delete-flash.js') }}"></script>
            {% endfor %}
        {% endfor %}

        <main>
            <div class="container">
                {% block body %}{% endblock %}
            </div>

        </main>
        <footer>
            <div>Cemineb &copy; {{ "now"|date("Y") }} - AdopteUnDev.com</div>
            <script src="{{ asset('js/sticky_nav.js') }}"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        </footer>
    </div>

</body>
</html>