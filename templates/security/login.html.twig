{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Connexion
{% endblock %}

{% block body %}
    <div class="container pt-2">
        <form action="{{ path('app_login') }}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Tu es déjà connecté à {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="col-lg-4 col-md-6 col-12">
                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                <label for="inputPseudo">Pseudo</label>
                <input type="text" value="{{ last_username }}" name="_username" id="inputPseudo" class="form-control" autocomplete="pseudo" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3">
                    <label>
                        <input id="remember" type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>

                <button class="btn btn-lg btn-primary" type="submit">
                    Connexion
                </button>
            </div>

        </form>
        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
    </div>
{% endblock %}
