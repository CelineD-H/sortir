{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Modification de {{ user.firstName }} {{ user.lastName }}
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') and app.user is not same as(user) %}
        {% include 'inc/navadmin.html.twig' %}
    {% endif %}

    <div class="container">
        <div class="view-head">
            <div class="sortie-organisation">
                <img class="avatar" src="{{ asset('uploads/files/' ~ user.avatar) }}" alt="Avatar de {{ user.firstName }} {{ user.lastName }}">
            </div>

            <div class="sortie-infos">
                {{ form_start(ModificationProfilForm) }}
                <h1>{{ user.firstName }} {{ user.lastName }}</h1>
                {{ form_widget(ModificationProfilForm) }}
                <button type="submit" class="btn">Modifier</button>
                {{ form_end(ModificationProfilForm) }}
            </div>
        </div>
    </div>
{% endblock %}
